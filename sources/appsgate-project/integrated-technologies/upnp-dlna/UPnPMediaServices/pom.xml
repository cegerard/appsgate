<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>appsgate.components</groupId>
		<artifactId>upnp-dlna</artifactId>
		<version>1.0.0</version>
	</parent>

	<artifactId>UPnPMediaServices</artifactId>
	<packaging>bundle</packaging>

	<!-- Dependencies Description -->
	<dependencies>
		<dependency>
			<groupId>org.apache.felix.sandbox</groupId>
			<artifactId>org.apache.felix.upnp.devicegen.util</artifactId>
			<version>0.1.0</version>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>4.2.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.ipojo</artifactId>
			<version>1.8.0</version>
			<type>bundle</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.ipojo.annotations</artifactId>
			<version>1.8.0</version>
		</dependency>
		<dependency>
			<groupId>fr.imag.adele.apam</groupId>
			<artifactId>apam-core</artifactId>
			<version>${apam.current.version}</version>
		</dependency>
		<dependency>
			<groupId>appsgate.components</groupId>
			<artifactId>CoreObjectSpec</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>appsgate.components</groupId>
				<artifactId>UPnPProxyGenerator</artifactId>
				<version>${project.version}</version>
				<configuration>
					<services>
						<service>
							<serviceType>urn:schemas-upnp-org:service:ContentDirectory:1</serviceType>
							<SCPDURL>org.upnp.schemas/service/ContentDirectory.1.xml</SCPDURL>
							<mapping>
								<packageName>appsgate.lig.upnp.media</packageName>
								<className>ContentDirectory</className>
							</mapping>
						</service>
						<service>
							<serviceType>urn:schemas-upnp-org:service:ConnectionManager:1</serviceType>
							<SCPDURL>org.upnp.schemas/service/ConnectionManager.1.xml</SCPDURL>
							<mapping>
								<packageName>appsgate.lig.upnp.media</packageName>
								<className>ConnectionManager</className>
							</mapping>
						</service>
						<service>
							<serviceType>urn:schemas-upnp-org:service:AVTransport:1</serviceType>
							<SCPDURL>org.upnp.schemas/service/AVTransport.1.xml</SCPDURL>
							<mapping>
								<packageName>appsgate.lig.upnp.media</packageName>
								<className>AVTransport</className>
							</mapping>
						</service>
						<service>
							<serviceType>urn:schemas-upnp-org:service:RenderingControl:1</serviceType>
							<SCPDURL>org.upnp.schemas/service/RenderingControl.1.xml</SCPDURL>
							<mapping>
								<packageName>appsgate.lig.upnp.media</packageName>
								<className>RenderingControl</className>
							</mapping>
						</service>
					</services>
					<devices>
						<device>
							<deviceType>urn:schemas-upnp-org:device:MediaRenderer:1</deviceType>
							<mapping>
								<packageName>appsgate.lig.upnp.media.proxy</packageName>
								<className>MediaRendererProxyImpl</className>
							</mapping>
							<serviceList>
								<service>
									<serviceId>urn:upnp-org:serviceId:RenderingControl</serviceId>
									<serviceType>urn:schemas-upnp-org:service:RenderingControl:1</serviceType>
									<mapping>
										<packageName>appsgate.lig.upnp.media.proxy</packageName>
										<className>RenderingControlProxyImpl</className>
									</mapping>
								</service>
								<service>
									<serviceId>urn:upnp-org:serviceId:ConnectionManager</serviceId>
									<serviceType>urn:schemas-upnp-org:service:ConnectionManager:1</serviceType>
									<mapping>
										<packageName>appsgate.lig.upnp.media.proxy</packageName>
										<className>ConnectionManagerProxyImpl</className>
									</mapping>
								</service>
								<service>
									<serviceId>urn:upnp-org:serviceId:AVTransport</serviceId>
									<serviceType>urn:schemas-upnp-org:service:AVTransport:1</serviceType>
									<mapping>
										<packageName>appsgate.lig.upnp.media.proxy</packageName>
										<className>AVTransportProxyImpl</className>
									</mapping>
								</service>
							</serviceList>
						</device>
						<device>
							<deviceType>urn:schemas-upnp-org:device:MediaServer:1</deviceType>
							<mapping>
								<packageName>appsgate.lig.upnp.media.proxy</packageName>
								<className>MediaServerProxyImpl</className>
							</mapping>
							<serviceList>
								<service>
									<serviceId>urn:upnp-org:serviceId:ContentDirectory</serviceId>
									<serviceType>urn:schemas-upnp-org:service:ContentDirectory:1</serviceType>
									<mapping>
										<packageName>appsgate.lig.upnp.media.proxy</packageName>
										<className>ContentDirectoryProxyImpl</className>
									</mapping>
								</service>
								<service>
									<serviceId>urn:upnp-org:serviceId:ConnectionManager</serviceId>
									<serviceType>urn:schemas-upnp-org:service:ConnectionManager:1</serviceType>
								</service>
								<service>
									<serviceId>urn:upnp-org:serviceId:AVTransport</serviceId>
									<serviceType>urn:schemas-upnp-org:service:AVTransport:1</serviceType>
								</service>
							</serviceList>
						</device>
					</devices>
				</configuration>
				<executions>
					<execution>
						<id>generate-all</id>
						<goals>
							<goal>generate-proxies</goal>
							<goal>generate-service-mapping</goal>
							<goal>generate-metadata</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>fr.imag.adele.apam</groupId>
				<artifactId>apam-maven-plugin</artifactId>
				<version>${apam.current.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>apam-bundle</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>