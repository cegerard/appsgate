<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

	<implementation name="PhilipsHUEImpl"
		classname="appsgate.lig.light.actuator.philips.HUE.impl.PhilipsHUEImpl"
		specification="CoreColorLightSpec" push="notifyChanges">
		<callback onInit="newInst" onRemove="deleteInst" />


 		<relation field="PhilipsBridge" specification="AppsgatePhilipsHUEAdapterSpec" resolve="external" />

		<!-- device kernel meta data -->
		<definition name="deviceName" type="string" default="Unknown"
			field="actuatorName" />
		<definition name="deviceId" type="string" default="000000"
			field="actuatorId" />
		<definition name="deviceType" type="string" default="PHILIPS_HUE_LIGHT"
			field="actuatorType" />

		<!-- device client meta data -->
		<definition name="pictureId" type="string" field="pictureId" />
		<definition name="userType" type="string" default="7"
			field="userType" />
		<definition name="status" type="string" default="2" field="status"
			method="statusChanged" />

		<!-- device meta data -->
		<definition name="lightBridgeId" type="string" field="lightBridgeId" />
		<definition name="lightBridgeIP" type="string" field="lightBridgeIP" />
		<definition name="reachable" 	 type="string" field="reachable"     method="reachableChanged"/>

		<definition name="state"  type="string" field="state"  method="stateChanged"/>
		<definition name="hue"    type="string" field="hue"    method="hueChanged"/>
		<definition name="sat"    type="string" field="sat"    method="satChanged"/>
		<definition name="bri"    type="string" field="bri"    method="briChanged"/>
		<definition name="x"  	  type="string" field="x"      method="xChanged"/>
		<definition name="y" 	  type="string" field="y"	   method="yChanged"/>
		<definition name="ct"	  type="string" field="ct"	   method="ctChanged"/>
		<definition name="speed"  type="string" field="speed"  method="speedChanged"/>
		<definition name="alert"  type="string" field="alert"  method="alertChanged"/>
		<definition name="mode"   type="string" field="mode"   method="modeChanged"/>
		<definition name="effect" type="string" field="effect" method="effectChanged"/>
		
	</implementation>

	<implementation name="PhilipsHUEImplFactory"
		classname="appsgate.lig.light.actuator.philips.HUE.impl.PhilipsHUEFactory" />

</apam>