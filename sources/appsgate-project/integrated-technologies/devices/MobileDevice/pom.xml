<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>appsgate.components</groupId>
		<artifactId>devices</artifactId>
		<version>1.0.0</version>
	</parent>
	
	<artifactId>MobileDeviceImpl</artifactId>
	<packaging>bundle</packaging>
	<name>Mobile Device implementation</name>
	
	<!-- Dependencies Description -->
	<dependencies>
		<dependency>
			<groupId>appsgate.components</groupId>
			<artifactId>CoreMobileDeviceSpec</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>appsgate.components</groupId>
			<artifactId>CoreObjectSpec</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.ipojo.annotations</artifactId>
			<version>${ipojo.annotations.version}</version>
		</dependency>
		<dependency>
			<groupId>appsgate.components</groupId>
			<artifactId>MobileDeviceAdapterSpec</artifactId>
			<version>1.0.0</version>
		</dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
<!-- 	 	<dependency> -->
<!-- 	  		<groupId>junit</groupId> -->
<!-- 	  		<artifactId>junit</artifactId> -->
<!-- 	  		<version>4.10</version> -->
<!-- 	  		<scope>test</scope> -->
<!-- 	 	</dependency> -->
	</dependencies>

	<!-- Build Description -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>fr.imag.adele.apam</groupId>
				<artifactId>apam-maven-plugin</artifactId>
				<version>${apam.current.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>apam-bundle</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
