<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

    <implementation name="WeatherObserverImpl" specification="ExtendedWeatherObserverSpec"
                    classname="appsgate.lig.weather.extended.impl.WeatherObserverImpl"
            push="fireDaylightNotificationMsg">

        <relation specification="CoreWeatherServiceSpec" field="weatherService" resolve="exist" fail="wait"/>
        <relation specification="CoreClockSpec" field="clock" resolve="exist" fail="wait"/>


        <definition name="currentLocation" type="string" field="currentLocation"  injected="internal" />

        <definition name="currentlyDaylight" type="boolean" field="currentlyDaylight" injected="internal"/>

        <definition name="currentWeatherCode" type="int" field="currentWeatherCode" injected="internal"/>
        <definition name="currentTemperature" type="int" field="currentTemperature" injected="internal"/>

        <definition name="tomorrowWeatherCode" type="int" field="tomorrowWeatherCode" injected="internal"/>
        <definition name="tomorrowMinTemperature" type="int" field="tomorrowMinTemperature" injected="internal"/>
        <definition name="tomorrowMaxTemperature" type="int" field="tomorrowMaxTemperature" injected="internal"/>

    </implementation>
    
    <implementation name="WeatherObserverFactory" classname="appsgate.lig.weather.extended.impl.WeatherObserverFactory">
        <callback onInit="start"/>

    </implementation>



</apam>