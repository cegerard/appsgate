
<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>appsgate.android</groupId>
        <artifactId>utils</artifactId>
        <version>1.0.0</version>
    </parent>

    <artifactId>JavamailAndroidAdapter</artifactId>
    <packaging>bundle</packaging>
        <version>1.4.7</version>
    

    <name>###### JavaMail Android Adapter ######</name>
    <description>Jar files from http://code.google.com/p/javamail-android/ </description>

<!-- Original Jar files come from javamail-android project : 
    http://code.google.com/p/javamail-android/ 
        mail.jar, activation.jar, additional.jar
        
       Prior to project build, it is mandatory to install those legacy jar file in the local maven repository :
mvn install:install-file -Dfile=activation.jar -DgroupId=javamail-android -DartifactId=activation.jar -Dversion=1.0.2 -Dpackaging=jar
mvn install:install-file -Dfile=mail.jar -DgroupId=javamail-android -DartifactId=mail.jar -Dversion=1.4.7 -Dpackaging=jar
mvn install:install-file -Dfile=additionnal.jar -DgroupId=javamail-android -DartifactId=additionnal.jar -Dversion=1.0.0 -Dpackaging=jar

-->

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <!-- Dependencies Description -->
    <dependencies>
        <dependency>
            <groupId>javamail-android</groupId>
            <artifactId>mail.jar</artifactId>
            <version>1.4.7</version>
            <scope>system</scope>
            <systemPath>${basedir}/src/main/resources/mail.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>javamail-android</groupId>
            <artifactId>activation.jar</artifactId>
            <version>1.0.2</version>
            <scope>system</scope>
            <systemPath>${basedir}/src/main/resources/activation.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>javamail-android</groupId>
            <artifactId>additionnal.jar</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/src/main/resources/additionnal.jar</systemPath>
        </dependency>

    </dependencies>


    <!-- Build Description -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Embed-Dependency>*;scope=runtime;inline=true</Embed-Dependency>
                        <Export-Package>javax.activation;javax.mail;javax.mail.internet;javax.mail.event;javax.mail.search;javax.mail.util;com.sun.mail.imap</Export-Package>
                        <Import-Package>!javax.security.sasl,*</Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>