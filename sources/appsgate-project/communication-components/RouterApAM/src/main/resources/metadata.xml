<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

	<implementation name="AppsGateRouterImpl"
		classname="appsgate.lig.router.impl.RouterImpl" specification="AppsGateRouterSpec"
		singleton="true">
		<callback onInit="newInst" onRemove="deleteInst" />
		<relation field="abstractDevice" added="addAbstractObject"
			removed="removedAbstractObject" />
		<relation field="ehmi" fail="wait" resolve="exist" />
		<relation push="gotNotification" multiple="true" resolve="exist" />
		<relation specification="AppsgateClientCommunicationManagerSpec"
			creation="eager"  resolve="external" >
            <interface field="addListenerService"/>
            <interface field="sendToClientService"/>
		</relation>

	</implementation>

	<!-- <apam-instance name="AppsGateRouterInst" implementation="AppsGateRouterImpl"> -->
	<!-- </apam-instance> -->

</apam>