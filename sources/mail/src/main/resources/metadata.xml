<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">
    
	<implementation name="GmailImpl" classname="appsgate.lig.mail.gmail.Gmail" interfaces="appsgate.lig.mail.Mail">
		<callback onInit="start" onRemove="stop" />
		<definition name="user" type="string" field="USER" internal="false"/>
		<definition name="password" type="string" field="PASSWORD" internal="false"/>
		<definition name="auto-refresh" type="int" field="refreshRate" internal="false"/>
	</implementation>
	
   <apam-instance name="GmailImpl-0" implementation="GmailImpl">
       <property name="user" value="smarthome.inria@gmail.com"/>
       <property name="password" value="smarthome2012"/>
       <property name="auto-refresh" value="5000"/>
   </apam-instance>

   	<implementation name="GMailTest" classname="appsgate.lig.mail.gmail.main.GMailTest">
		<callback onInit="start" onRemove="stop" />
		<dependency field="mailService" />
	</implementation>
   
   <apam-instance name="meteo-client-0" implementation="GMailTest"/>
   
</apam>
